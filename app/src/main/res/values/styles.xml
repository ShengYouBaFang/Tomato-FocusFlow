<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 按钮样式 -->
    <style name="Widget.FocusFlow.Button" parent="Widget.Material3.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.FocusFlow.Button.Primary" parent="Widget.FocusFlow.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>

    <style name="Widget.FocusFlow.Button.Secondary" parent="Widget.Material3.Button.TextButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- 卡片样式 -->
    <style name="Widget.FocusFlow.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="Widget.FocusFlow.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">@color/text_hint</item>
        <item name="strokeWidth">1dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- 文本样式 -->
    <style name="TextAppearance.FocusFlow.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.FocusFlow.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.FocusFlow.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.FocusFlow.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 特殊文本样式 -->
    <style name="TextAppearance.FocusFlow.Timer" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.FocusFlow.Duration" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
